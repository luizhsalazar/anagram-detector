<%= form_for Anagram.new do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading"><strong> Check Anagram </strong>  </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group" align="left">
              <%= f.label :Insert_your_anagram %><br>
              <%= f.text_field :sentence, class: "form-control" %>
            </div>

            <%= button_tag( :class => "btn btn-primary btn-lg") do %>
                Check <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<% end %>